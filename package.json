{
  "name": "sage",
  "private": true,
  "browserslist": [
    "extends @roots/browserslist-config"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "prettier": "@wordpress/prettier-config",
  "type": "module",
  "scripts": {
    "dev:blocks": "wp-scripts start --webpack-copy-php --webpack-src-dir=app/Blocks",
    "build:blocks": "wp-scripts build --webpack-copy-php --webpack-src-dir=./app/Blocks --output-path=./app/Blocks",
    "dev": "bud dev",
    "build": "bud build",
    "translate": "yarn translate:pot && yarn translate:update",
    "translate:pot": "wp i18n make-pot . ./resources/lang/sage.pot --include=\"app,resources\"",
    "translate:update": "wp i18n update-po ./resources/lang/sage.pot ./resources/lang/*.po",
    "translate:compile": "yarn translate:mo && yarn translate:js",
    "translate:js": "wp i18n make-json ./resources/lang --pretty-print",
    "translate:mo": "wp i18n make-mo ./resources/lang ./resources/lang"
  },
  "devDependencies": {
    "@roots/bud": "6.12.2",
    "@roots/bud-sass": "6.12.2",
    "@roots/bud-support": "6.12.2",
    "@roots/sage": "6.12.2",
    "@wordpress/scripts": "^25.5.1",
    "copy-webpack-plugin": "^11.0.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.0",
    "hamburgers": "^1.2.1",
    "prettier": "^2.8.8",
    "stylelint": "^15.7.0",
    "stylelint-config-standard-scss": "^9.0.0"
  }
}
